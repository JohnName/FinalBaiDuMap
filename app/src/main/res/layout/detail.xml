<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/branchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <host.msr.finalbaidumap.DrawableCenterTextView
            android:id="@+id/branchShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_mark"
            android:gravity="center_vertical"
            android:text="分享" />

        <host.msr.finalbaidumap.DrawableCenterTextView
            android:id="@+id/branchCollect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_mark"
            android:gravity="center_vertical"
            android:text="收藏" />

        <host.msr.finalbaidumap.DrawableCenterTextView
            android:id="@+id/branchEvaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_mark"
            android:gravity="center_vertical"
            android:text="点评" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/branchLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dip" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <host.msr.finalbaidumap.DrawableCenterTextView
                    android:id="@+id/branchNearby"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/icon_mark"
                    android:gravity="center_vertical"
                    android:text="搜周边" />
                <host.msr.finalbaidumap.DrawableCenterTextView
                    android:id="@+id/branchNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableLeft="@mipmap/icon_mark"
                    android:gravity="center_vertical"
                    android:text="导航" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>